@model IEnumerable<Pasteleria.Models.Objetos.UsuarioObj>

@{
    ViewBag.Title = "UsuariosConsulta";
}

<div class="jumbotron">
    <!--Encabezado-->
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="https://cdn-icons-png.flaticon.com/512/1165/1165674.png" width="55" height="55" class="d-inline-block align-top" alt="">
            <h1 class="d-inline text-center"> Mantenimiento de Usuarios</h1>
        </a>
        @Html.ActionLink("Agregar Nuevo Usuario", "UsuariosRegistrar", "Usuario", null, new { @class = "btn btn-info pull-right mr-3" })
        
    </nav>

    <!--Tabla-->
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive-md">
                <table class="table table-hover table-bordered table-striped mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Correo</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Tipo Usuario</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.correo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipoUsuario.descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>
                                <td>
                                    @Html.ActionLink("Actualizar", "UsuariosActualizar", "Usuario", new { id = item.id }, new { @class = "btn btn-dark" }) |
                                    <!--En progreso el inactivar-->
                                    <button type="button" class="btn btn-danger" data-toggle="modal">
                                        Inactivar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>

